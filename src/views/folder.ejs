<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Pasta</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

<header class="header">
  <h1>Pasta: <%= folder.name %></h1>

  <div class="user">
    <a href="/dashboard">Voltar</a>
  </div>
</header>

<main class="container">

  <div class="card">
    <h2>Upload para esta pasta</h2>

    <form action="/upload" method="POST" enctype="multipart/form-data">
      <input type="file" name="file" required>
      <input type="hidden" name="folderId" value="<%= folder.id %>">
      <button type="submit">Upload</button>
    </form>
  </div>

  <div class="card">
    <h2>Arquivos</h2>

    <ul>
      <% if (folder.files.length === 0) { %>
        <li>Nenhum arquivo nesta pasta</li>
      <% } %>

      <% folder.files.forEach(file => { %>
        <li>
          <div>
            ğŸ“„
            <a href="/files/<%= file.id %>" class="truncate" title="<%= file.name %>">
                <%= file.name %>
            </a>
          </div>
          <span><%= file.size %> bytes</span>
        </li>
      <% }) %>
    </ul>
  </div>

  <div class="card">
    <h2>Compartilhar pasta</h2>

    <form action="/folders/<%= folder.id %>/share" method="POST">
      <select name="duration">
        <option value="1d">1 dia</option>
        <option value="7d">7 dias</option>
        <option value="30d">30 dias</option>
      </select>

      <button type="submit">Gerar link</button>
    </form>
  </div>

  <div class="card">
    <h2>Links pÃºblicos</h2>

    <ul>
      <% if (folder.sharedLinks.length === 0) { %>
        <li>Nenhum link gerado</li>
      <% } %>

      <% folder.sharedLinks.forEach(link => { %>
        <li>
          ğŸ”—
          <a href="/share/<%= link.token %>" target="_blank">
            /share/<%= link.token %>
          </a>
          <span>(expira em <%= link.expiresAt.toLocaleDateString() %>)</span>
        </li>
      <% }) %>
    </ul>
  </div>

</main>

</body>
</html>